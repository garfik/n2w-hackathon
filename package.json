{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/server/index.ts",
    "start": "NODE_ENV=production bun src/server/index.ts",
    "build": "bun run build.ts",
    "env:up": "docker compose up -d db s3 s3-init adminer",
    "env:down": "docker compose down",
    "env:cleanup": "docker compose down -v --remove-orphans",
    "auth:generate": "bunx @better-auth/cli@latest generate --output src/db/auth.schema.ts",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:studio": "bunx drizzle-kit studio"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.978.0",
    "@google/genai": "^1.39.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "better-auth": "^1.2.0",
    "bun-plugin-tailwind": "^0.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.0",
    "drizzle-orm": "^0.36.0",
    "lucide-react": "^0.545.0",
    "pg": "^8.13.0",
    "react": "^19",
    "react-dom": "^19",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.24.0",
    "pino": "^9.5.0"
  },
  "devDependencies": {
    "pino-pretty": "^13.0.0",
    "drizzle-kit": "^0.28.0",
    "@types/pg": "^8.11.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.4.0"
  }
}
